@model IEnumerable<StationeryStore.Models.Products_tb>
@{
    ViewData["Title"] = "Admin";
}

<div class="mt-3">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if(TempData["editFinish"]!=null){
        <div class="alert alert-success">
            @TempData["editFinish"]
            </div>
    }

    @if (TempData["deleteFinish"] != null)
    {
        <div class="alert alert-danger">
            @TempData["deleteFinish"]
        </div>
    }

    <a href="@Url.Action("AddProduct","Admin")"class="btn btn-primary" style="margin:0 0 10px 0">เพิ่มข้อมูลสินค้า</a>

</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ชื่อสินค้า</th>
            <th>ราคาสินค้า</th>
            <th>จำนวนสินค้า</th>
            <th>หมวดหมู่</th>
            <th>รูปภาพสินค้า</th>
            <th>จัดการ</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.productName</td>
                <td>@product.price</td>
                <td>@product.stock</td>
                <td>@product.category.categoryName</td> <!-- แสดงชื่อหมวดหมู่ -->
                <td><img src="@product.img" alt="Cover Image" width="100" /></td> <!-- แสดงปกหนังสือ -->
                <td>
                    <!-- ลิงก์ไปยังหน้า Edit -->
                    <a href="@Url.Action("Edit", "Admin", new { id = product.productID })" class="btn btn-primary"style="margin:0 0 10px 0">แก้ไข</a>

                    <form asp-action="Delete" asp-controller="Admin" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@product.productID" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('คุณต้องการลบข้อมูลนี้หรือไม่');">ลบ</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
<style>
    table {
        background-color: rgba(245, 245, 220, 0.9);
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px 0;
        border: 1px solid #d4d4d4;
    }

    /* Table headers */
    th {
        background-color: rgba(210, 180, 140, 0.9);
        color: #333;
        padding: 15px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #c4c4c4;
        border-right: 1px solid #c4c4c4;
    }

        th:last-child {
            border-right: none;
        }

    /* Table cells */
    td {
        padding: 12px 15px;
        border-bottom: 1px solid #e0e0e0;
        border-right: 1px solid #e0e0e0;
        background-color: rgba(255, 255, 255, 0.4);
    }

        td:last-child {
            border-right: none;
        }

    /* Remove bottom border for last row */
    tr:last-child td {
        border-bottom: none;
    }

    /* Hover effect on rows */
    tr:hover td {
        background-color: rgba(210, 180, 140, 0.2);
        transition: background-color 0.3s ease;
    }

    /* Alternate row colors */
    tr:nth-child(even) td {
        background-color: rgba(245, 245, 220, 0.5);
    }

    /* Button styling */
    .btn {
        padding: 6px 12px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        margin: 0 3px;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #007bff;
        color: white;
    }

        .btn-edit:hover {
            background-color: #0056b3;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>
