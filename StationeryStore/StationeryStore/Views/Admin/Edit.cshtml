@model StationeryStore.Models.Products_tb

@{
    ViewData["Title"] = "Edit";
}

<h2>แก้ไขสินค้า</h2>

<form action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="productID" value="@Model.productID" />

    <div class="form-group">
        <label for="productName">ชื่อสินค้า</label>
        <input type="text" id="productName" name="productName" value="@Model.productName" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="price">ราคาสินค้า</label>
        <input type="number" id="price" name="price" value="@Model.price" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="stock">จำนวนสินค้า</label>
        <input type="number" id="stock" name="stock" value="@Model.stock" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="categoryID">หมวดหมู่</label>
        <select id="categoryID" name="categoryID" class="form-control">
            <div class="Drop">
                @foreach (var category in ViewBag.Categories)
                {
                    @if (category.Value == Model.categoryID.ToString())
                    {
                    <option value="@category.Value" selected>@category.Text</option>
                    }
                    else
                    {
                    <option value="@category.Value">@category.Text</option>
                    }
                }
    </div>
    </select>
    </div>

    <div class="form-group">
        <label>ใส่ลิงค์ ImgAdress</label>
        <input type="text" name="imgAdress" class="form-control" />
        <label>รูปภาพปัจจุบัน</label>
        @if (!string.IsNullOrEmpty(Model.img))
        {
            <img src="@Model.img" alt="Current Image" style="max-width: 200px;" />
        }

    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">บันทึก</button>
        <a href="@Url.Action("Admin")" class="btn btn-secondary">ยกเลิก</a>
    </div>
</form>

<style>
    body {
        color: white;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }

    #categoryID option {
        background-color: black;
        color: white;
    }
</style>