<div class="body-Login">
    <form action="/Account/Login" method="post">
        <div class="form-group">
            <label for="userNameOrEmail">Username or Email </label>
            <input type="text" name="userNameOrEmail" id="userNameOrEmail" class="form-control" 
                placeholder="Enter username or email" required
            />
        </div>

        <div class="form-group">
            <label for="passwordl">Username or Email </label>
            <input type="password" name="password" id="password" class="form-control"
                   placeholder="Enter password" required />
        </div>


        <div class="form-group from-check">

			<input type="checkbox" name="remember" id="remember" class="form-check-input" />
            
            <label for="remember" class="form-check-label">Remember</label>
        </div>


        <div class="form-group ">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

        <div class="form-group">
            <a href="/Account/Register">Register</a>
        </div>
    </form>
</div>